<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Shield.App.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shield.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        
    >

    <Grid>

        <StackPanel x:ConnectionId='2'                                               Spacing="5">
            <TextBlock x:Uid="UserNameProfileHeader" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock x:ConnectionId='5'                                               Style="{StaticResource CaptionTextBlockStyle}"/>
            <TextBlock x:Uid="AddressProfileHeader" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock x:ConnectionId='6'                                            Style="{StaticResource CaptionTextBlockStyle}"/>
            <TextBlock x:Uid="UIDProfileHeader" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <TextBlock x:ConnectionId='7'                                         Style="{StaticResource CaptionTextBlockStyle}"/>
            <Button x:ConnectionId='8' x:Uid="LogoutButton" x:Name="LogoutButton"                           />
        </StackPanel>

        <StackPanel x:ConnectionId='3'                                                  Spacing="5">
            <TextBlock x:Uid="UnauthorizedTip" Style="{StaticResource BodyStrongTextBlockStyle}"/>
            <Button x:ConnectionId='4' x:Uid="LoginButton"                          />
        </StackPanel>
    </Grid>
</Page>

