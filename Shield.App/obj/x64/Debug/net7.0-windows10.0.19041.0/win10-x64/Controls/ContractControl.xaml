<?xml version="1.0" encoding="utf-8"?>
<UserControl x:ConnectionId='1'
    x:Class="Shield.App.Controls.ContractControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shield.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:ui="using:CommunityToolkit.WinUI"
    >

    <UserControl.Resources>

        <media:AttachedCardShadow x:Key="CommonShadow" Offset="0,3" Opacity="0.4" CornerRadius="5"/>

    </UserControl.Resources>

    <Border ui:Effects.Shadow="{StaticResource CommonShadow}" Margin="5 7 5 10">
        
        <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top">

            <Expander.ContextFlyout>
                
                <MenuFlyout>
                    
                    <MenuFlyoutItem x:ConnectionId='2' x:Uid="FlyoutExportButton"                           >
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF584;" FontSize="16"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='3' x:Uid="FlyoutPlanButton"                         >
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEBD2;" FontSize="16"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    
                    <MenuFlyoutSeparator/>

                    <MenuFlyoutItem x:ConnectionId='4' x:Uid="FlyoutEditButton"                         >
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="16"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    
                    <MenuFlyoutSeparator/>

                    <MenuFlyoutItem x:ConnectionId='5' x:Uid="FlyoutDeleteButton"                           >
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" FontSize="16"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    
                    <MenuFlyoutSeparator/>

                    <MenuFlyoutItem x:ConnectionId='6' x:Uid="FlyoutAlertButton"                          >
                        <MenuFlyoutItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE783;" FontSize="16"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
                    
                </MenuFlyout>
                
            </Expander.ContextFlyout>
            
            <Expander.Header>

                <Grid ColumnSpacing="10" CornerRadius="5" Padding="5" Height="80" HorizontalAlignment="Stretch" Margin="-15 0 -25 0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="5">
                        <Image x:ConnectionId='9'                                       Stretch="UniformToFill" VerticalAlignment="Center"/>
                    </Border>

                    <Grid Grid.Column="1">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:ConnectionId='7' Grid.Row="0"                                           Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock x:ConnectionId='8' Grid.Row="1"                                      Style="{StaticResource BodyTextStyle}" Foreground="DarkGray"/>

                    </Grid>

                </Grid>
                
            </Expander.Header>
            
            <Expander.Content>
                
                <Grid CornerRadius="5" Padding="5" ColumnSpacing="10">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="4">
                        <Image x:ConnectionId='20' x:Name="BigThumbnail"                                      />
                    </Border>

                    <Grid Grid.Column="1" RowSpacing="10">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock x:Uid="BaileeTitle" Grid.Row="0" Style="{StaticResource PageTitleStyle}"/>

                        <TextBlock x:ConnectionId='17' Grid.Row="1"                                     Margin="16 0 0 0" FontWeight="Medium" FontSize="18"/>

                        <TextBlock x:Uid="OwnersTitle" Grid.Row="2" Style="{StaticResource PageTitleStyle}"/>

                        <ListView x:ConnectionId='18' Grid.Row="3"                                       SelectionMode="None" MaxHeight="200"/>

                        <TextBlock x:Uid="CommentTitle" Grid.Row="4" Style="{StaticResource PageTitleStyle}"/>

                        <TextBlock x:ConnectionId='19' Grid.Row="5"                                      Margin="16 0 0 0" TextWrapping="Wrap"/>

                    </Grid>

                    <Grid Grid.Column="2" RowSpacing="10">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Vertical" Spacing="5">
                            <Button x:ConnectionId='12' x:Name="ExportButton" HorizontalAlignment="Stretch"                           >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF584;" FontSize="16"/>
                                        <TextBlock x:Uid="ExportContractButton"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:ConnectionId='13' x:Name="PlanButton" HorizontalAlignment="Stretch"                         >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEBD2;" FontSize="16"/>
                                        <TextBlock x:Uid="PlanContractButton"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:ConnectionId='14' x:Name="EditButton" HorizontalAlignment="Stretch"                         >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="16"/>
                                        <TextBlock x:Uid="EditContractButton"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:ConnectionId='15' x:Name="DeleteButton" HorizontalAlignment="Stretch"                           >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" FontSize="16"/>
                                        <TextBlock x:Uid="DeleteContractButton"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:ConnectionId='16' x:Name="AlertButton" HorizontalAlignment="Stretch"                          >
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE783;" FontSize="16"/>
                                        <TextBlock x:Uid="AlertContractButton"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" Spacing="5">
                            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                                <TextBlock x:ConnectionId='11'                                           Style="{StaticResource CaptionTextBlockStyle}"/>
                                <FontIcon Glyph="&#xE783;" FontSize="16"/>
                            </StackPanel>
                            <TextBlock x:ConnectionId='10'                                   Style="{StaticResource CaptionTextBlockStyle}"/>
                        </StackPanel>

                    </Grid>
                    
                </Grid>
                
            </Expander.Content>
            
        </Expander>
        
    </Border>
    
</UserControl>

