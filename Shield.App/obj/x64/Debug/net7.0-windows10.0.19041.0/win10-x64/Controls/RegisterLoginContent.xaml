<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Shield.App.Controls.RegisterLoginContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shield.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowSpacing="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <FontIcon Grid.Row="0" Glyph="&#xE77B;" FontSize="40"/>

        <TextBox x:ConnectionId='2' x:Uid="LoginBox" x:Name="LoginTB" Grid.Row="1"/>
        
        <PasswordBox x:ConnectionId='3' x:Uid="PasswordBox" x:Name="PasswordTB" Grid.Row="2"/>

    </Grid>
</UserControl>

